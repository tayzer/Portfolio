@page "/projects"
@inject ProjectService ProjectSvc

<h1>My Projects</h1>
<hr />

<div class="project-gallery">
    @foreach (var project in ProjectSvc.GetProjects())
    {
        <div class="project-card">
            <img src="@project.ImageUrl" alt="@project.Title" style="width:100%;" />
            <h3>@project.Title</h3>
            <p>@project.Summary</p>
            <NavLink href="@($"project/{project.Id}")">View Details</NavLink>
        </div>
    }
  </div>

<style>
    .project-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }
    .project-card {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 1rem;
        padding: 0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: all 0.3s ease;
    }
    .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
        border-color: #8b3a44;
        background: rgba(30, 41, 59, 0.95);
    }
    .project-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 1px solid rgba(148, 163, 184, 0.2);
    }
    .project-card h3 {
        padding: 1.5rem 1.5rem 0;
        margin: 0;
        font-size: 1.4rem;
        color: #f8fafc;
        font-weight: 600;
    }
    .project-card p {
        padding: 0.75rem 1.5rem;
        color: #cbd5e1;
        line-height: 1.7;
    }
    .project-card a {
        display: block;
        padding: 1rem 1.5rem;
        color: #8b3a44;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    .project-card a:hover {
        background: rgba(139, 58, 68, 0.1);
        padding-left: 2rem;
    }
</style>
